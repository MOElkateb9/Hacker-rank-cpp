#include <iostream>
#include <string>
using namespace std;

int main() {
	
    string word1 , word2 ; 
    cin >> word1 >> word2 ;
    
    int l1 , l2 ;
    l1=word1.length();
    l2=word2.length();
    
    cout<<l1 <<" "<<l2<<endl;
    cout <<word1+word2<<endl;

    std :: swap(word1[0],word2[0]);
    cout<<word1 <<" "<<word2 ;
    return 0;
}
